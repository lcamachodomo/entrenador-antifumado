<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActiosnBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Example</item>
    </style>

    <style name="CustomActionBarThemeNoActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActiosnBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Example</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActiosnBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <!--<item name="aandroid:background">#D85122</item>-->
        <item name="android:background">@drawable/ab_solid_example</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_example</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    <!--<style name="MyActionBarsTabBar" parent="android:Widget.ActionBar.TabBar">
        <item name="ndroid:background">@android:color/transparent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>-->

    <style name="ActionBarTabStyle.Example" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>