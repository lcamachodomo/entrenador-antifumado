<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout3"
        android:layout_above="@+id/savennext1"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/register_how_long_smokingv2"
                android:id="@+id/texstView"
                android:layout_below="@+id/register_cigarettes_per_day"
                android:layout_alignStart="@+id/count_cigarettes"
                android:layout_alignLeft="@+id/count_cigarettes" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/register_how_many_cigarettes_v2"
                android:id="@+id/count_friends"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_cigarettes_per_day"
                android:layout_below="@+id/count_friends"
                android:layout_toEndOf="@+id/count_cigarettes"
                android:layout_toRightOf="@+id/count_cigarettes"
                android:layout_alignEnd="@+id/count_friends"
                android:layout_alignRight="@+id/count_friends"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/register_how_plan_type"
                android:id="@+id/textViews3"
                android:layout_below="@+id/days_quit"
                android:layout_alignStart="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/register_how_plan_type_p2"
                android:id="@+id/textView3"
                android:layout_below="@+id/textViews3"
                android:layout_alignStart="@+id/textViews3"
                android:layout_alignEnd="@+id/days_quit"
                android:layout_alignLeft="@+id/textViews3"
                android:layout_alignRight="@+id/days_quit" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1"
                android:gravity="center_horizontal|center"
                android:id="@+id/count_cigarettes"
                android:layout_toEndOf="@+id/count_friends"
                android:layout_toRightOf="@+id/count_friends"
                android:layout_above="@+id/texstView"
                android:layout_alignTop="@+id/register_cigarettes_per_day"
                android:layout_alignStart="@+id/count_friends"
                android:layout_alignLeft="@+id/count_friends" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="center_horizontal|center"
                android:text="1 aÃ±o"
                android:id="@+id/textView4"
                android:layout_below="@+id/texstView"
                android:layout_alignStart="@+id/texstView"
                android:layout_alignLeft="@+id/texstView" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/days_quit"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"
                android:layout_alignEnd="@+id/register_cigarettes_per_day"
                android:layout_alignStart="@+id/register_cigarettes_per_day"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignRight="@+id/register_cigarettes_per_day"
                android:layout_alignLeft="@+id/register_cigarettes_per_day" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/text_motiv"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5">


                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textDirection="ltr"
                        android:text="@string/register_motivations_money"
                        android:id="@+id/register_motivations_money"
                        android:layout_below="@+id/register_motivations_aesthetic"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_motivations_aesthetic"
                        android:id="@+id/register_motivations_aesthetic"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="5">


                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_motivations_health"
                        android:id="@+id/register_motivations_health"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_motivations_family"
                        android:id="@+id/register_motivations_family"
                        android:layout_below="@+id/register_motivations_health"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/motivationsv2"
                android:id="@+id/text_motiv"
                android:layout_below="@+id/plan_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plan_type"
                android:entries="@array/all"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/orange_club"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/entrenador_antifumado"
            android:id="@+id/textVisew2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>




    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/prev_registro"
        android:scaleType="fitCenter"
        android:id="@+id/back1"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignTop="@+id/savennext1"
        android:layout_toLeftOf="@+id/textView2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/prev_registro"
        android:scaleType="fitCenter"
        android:id="@+id/savennext1"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2 de 2"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
