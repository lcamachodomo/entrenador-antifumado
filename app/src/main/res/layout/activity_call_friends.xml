<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.lecz.clubdelosvencedores.general.CallFiendsActivity">

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="LLAMAR A UN AMIGO"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_title"
        android:id="@+id/textViewas"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context="com.lecz.clubdelosvencedores.general.CallFiendsActivity"
        android:layout_below="@+id/textViewas"
        android:layout_above="@+id/call_another">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/add_cigarette"
            android:id="@+id/linearLayout3">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="5">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/contact_1">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text"
                            android:id="@+id/name_contact_1"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Medium Text"
                            android:textColor="@color/gray_text"
                            android:id="@+id/number_contact_1"
                            android:layout_below="@+id/name_contact_1"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="4">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="New Button"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            android:src="@drawable/call_phone"
                            android:id="@+id/call_contact_1"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                             />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="5">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/add_cigarette"
                    android:id="@+id/contact_2">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text"
                            android:id="@+id/name_contact_2"
                            android:layout_centerVertical="true"
                            android:visibility="invisible"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Medium Text"
                            android:visibility="invisible"
                            android:textColor="@color/gray_text"
                            android:id="@+id/number_contact_2"
                            android:layout_below="@+id/name_contact_2"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="4">


                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="New Button"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            android:src="@drawable/call_phone"
                            android:id="@+id/call_contact_2"
                            android:visibility="invisible"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>




                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="5">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white"
                    android:padding="15dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/add_cigarette"
                    android:id="@+id/linearLaysout3">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text"
                            android:id="@+id/name_contact_3"
                            android:visibility="invisible"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Medium Text"
                            android:visibility="invisible"
                            android:textColor="@color/gray_text"
                            android:id="@+id/number_contact_3"
                            android:layout_below="@+id/name_contact_3"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="4">


                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="New Button"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            android:src="@drawable/call_phone"
                            android:id="@+id/call_contact_3"
                            android:layout_centerVertical="true"
                            android:visibility="invisible"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>




                </LinearLayout>

            </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="55dp"
        android:layout_marginLeft="55dp"
        android:textColor="@android:color/white"
        android:background="@drawable/border_button"
        android:text="VER MÃS CONTACTOS"
        android:id="@+id/call_another"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
