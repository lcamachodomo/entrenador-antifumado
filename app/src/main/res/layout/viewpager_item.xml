<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    tools:context="com.lecz.clubdelosvencedores.general.HomeActivity"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:id="@+id/contentmain"
        tools:context="com.lecz.clubdelosvencedores.general.HomeActivity"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/consejo_fondo"
        android:paddingTop="4dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/title"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="16sp"
        android:text="kajshakjs kaj sakjhsakjhsakjshakjshakjshaksjhaksjhaksja ksjah skjahs kajhskajhsakjshkajshakjhskajhsakjshakjshakjsakjshakjshakjshakjshakjshakhskajhskahskahskajhskaj skajhskahs"
        android:singleLine="false"
        customAttrs:customFont="futura"
        android:textColor="@android:color/white"
        android:id="@+id/content"
        android:layout_toStartOf="@+id/image"
        android:layout_toEndOf="@+id/title"
        android:layout_toLeftOf="@+id/image"
        android:layout_toRightOf="@+id/title"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_marginTop="25dp"
        android:layout_height="90dp"
        android:src="@drawable/checkmark"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>


    </RelativeLayout>
</RelativeLayout>
