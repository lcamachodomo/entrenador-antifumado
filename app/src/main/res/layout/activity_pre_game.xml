<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    tools:context="com.lecz.clubdelosvencedores.PreGameActivity">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No volver a mostrar"
        android:id="@+id/no_show_again"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="26sp"
        android:text="DISTRAETE JUGANDO"
        customAttrs:customFont="futura_heavy"
        android:id="@+id/textView"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <com.lecz.clubdelosvencedores.CustomTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Oprimí todos los botones que contengan la silueta del entrenador antifumado antes de que se acabe el tiempo. Evitá tocar cualquier otro botón o perderás puntos. ¡Mucha suerte!"
        android:id="@+id/textView2"
        customAttrs:customFont="futura_heavy"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.lecz.clubdelosvencedores.GifView
        android:id="@+id/gifView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_above="@+id/gotoGame">
    </com.lecz.clubdelosvencedores.GifView>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="INICIAR"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:background="@drawable/start_game"
        android:id="@+id/gotoGame"
        android:layout_above="@+id/no_show_again"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
