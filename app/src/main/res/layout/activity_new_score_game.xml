<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lecz.clubdelosvencedores.ScoreGameActivity">



    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_title"
        android:textSize="26sp"
        android:text="NIVEL: "
        android:id="@+id/as"
        android:layout_below="@+id/max_score"
        android:layout_alignStart="@+id/add_button"
        android:layout_alignLeft="@+id/add_button"/>

    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customAttrs:customFont="futura_heavy"
        android:textColor="@color/blue_score"
        android:textSize="26sp"
        android:text="6"
        android:id="@+id/level_game"
        android:layout_alignTop="@+id/as"
        android:layout_toEndOf="@+id/as"
        android:layout_toRightOf="@+id/as"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUGAR OTRA VEZ"
        android:id="@+id/play_again"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="23dp"
        android:background="@drawable/start_game"
        android:textColor="@android:color/white"
        android:layout_above="@+id/add_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/score_game"
        android:src="@drawable/checkmark"
        android:layout_toStartOf="@+id/max_score"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/max_score"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/as"
        android:layout_above="@+id/play_again" />
    <com.lecz.clubdelosvencedores.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:textSize="30sp"
        android:background="@drawable/new_score_game"
        customAttrs:customFont="futura_bold"
        android:textColor="@android:color/white"
        android:text="3452"
        android:paddingBottom="7dp"
        android:id="@+id/max_score"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center|bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <FrameLayout
        android:id="@+id/list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_marginTop="8dp"
        android:id="@+id/add_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ayuda"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
