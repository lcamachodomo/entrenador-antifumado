<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home_two">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="com.lecz.clubdelosvencedores.general.MainActivity">



        <com.lecz.clubdelosvencedores.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            customAttrs:customFont="futura_heavy"
            android:textColor="@color/blue_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/name_user"
            android:text="name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.lecz.clubdelosvencedores.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/blue_subtitle"
            customAttrs:customFont="futura_heavy"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/level"
            android:text="Nivel: Aspirante"
            android:layout_below="@+id/name_user"
            android:layout_centerHorizontal="true" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:context="com.lecz.clubdelosvencedores.general.MainActivity"

            android:layout_below="@+id/level"
            android:id="@+id/relativeLayout">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2"
                android:layout_alignParentTop="true">



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"

                    android:layout_weight="5">

                    <com.lecz.clubdelosvencedores.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="days"
                        android:textSize="50dp"
                        customAttrs:customFont="old_west"
                        android:textColor="@color/yellow"
                        android:id="@+id/days"
                        android:gravity="center"
                        android:layout_above="@+id/days_to_quit"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="@string/days_to_quit"
                        android:id="@+id/days_to_quit"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_user_home"
                        android:scaleType="fitCenter"

                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <com.lecz.clubdelosvencedores.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="35dp"
                        android:text="money"
                        customAttrs:customFont="old_west"
                        android:textColor="@color/yellow"
                        android:gravity="center"
                        android:id="@+id/money"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="Ahorrados"
                        android:id="@+id/textView5"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/relativeLayout"
            android:id="@+id/beforeZeroDay">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_cigarette_ly"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Fumé"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:id="@+id/add_cigarette"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center"
                android:src="@drawable/checkmark"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

            <com.lecz.clubdelosvencedores.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="20"
                android:textColor="@android:color/white"
                customAttrs:customFont="old_west"
                android:layout_marginRight="5dp"
                android:id="@+id/textView4"
                android:layout_toEndOf="@+id/limite"
                android:layout_toRightOf="@+id/limite"
                android:layout_alignBottom="@+id/limite" />



            <com.lecz.clubdelosvencedores.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Límite:"
                android:id="@+id/limite"
                customAttrs:customFont="futura"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <com.lecz.clubdelosvencedores.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fumados:"
                customAttrs:customFont="futura"
                android:id="@+id/tv_smoked"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignBottom="@+id/textView4" />


            <com.lecz.clubdelosvencedores.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="12"
                customAttrs:customFont="old_west"
                android:id="@+id/cigarettes_smoked"
                android:textColor="@android:color/white"
                android:layout_toEndOf="@+id/tv_smoked"
                android:layout_toRightOf="@+id/tv_smoked"
                android:layout_alignBottom="@+id/tv_smoked" />
        </RelativeLayout>


        <com.lecz.clubdelosvencedores.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#ff999999"
            android:text="Mi actividad"
            customAttrs:customFont="futura_heavy"
            android:id="@+id/textView23"
            android:layout_below="@+id/beforeZeroDay"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>



</FrameLayout>